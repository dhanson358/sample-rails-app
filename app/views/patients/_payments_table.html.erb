<div class="container justify-content-between">
  <div class="row">
    <div class="col">
      <h1>Payments </h1>
    </div>
  </div>
</div>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Cdt code</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= link_to payment.cdt_code, payment.transaction_code %></td>
        <td><%= payment.transaction_code&.entry_type %></td>
        <td>$<%= payment.amount %></td>
        <td><%= payment.date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_transaction_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>