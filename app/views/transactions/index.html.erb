<p id="notice"><%= notice %></p>


<div class="container justify-content-between">
  <div class="row">
    <div class="col">
      <h1>Transactions</h1>
    </div>
    <div class="col">
      <%= link_to 'New Transaction', new_transaction_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Cdt type</th>
      <th>Title</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Performed by</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.transaction_code&.entry_type %></td>
        <td><%= transaction.transaction_code&.title %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.performed_by %></td>
        <td><%= link_to 'Patient', transaction.patient %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
